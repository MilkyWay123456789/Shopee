@model Shopee.Models.Administrator
@{
    ViewBag.Title = "Item";
    Layout = "~/Areas/Admin/Views/Shared/_ShopeeAdmin.cshtml";
}

<form method="post" id="FormMember" action="@Url.Action("Save","Member")" enctype="multipart/form-data">
    <div class="card-body">
        <input type="hidden" value="@Model.Id" name="Id" />
        <div class="form-group">
            <label>Tên thành viên</label>
            <input type="text" class="form-control" name="Name" value="@Model.UserName" placeholder="Tên thành viên">
        </div>
        <div class="form-group">
            <label>Nhóm quyền</label>
            @Html.DropDownList("GroupId", (SelectList)ViewBag.GroupId, "  ------ Chọn quyền------ ", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Mật khẩu</label>
            <input type="password" class="form-control" name="Password" id="Password" value="" placeholder="Nhập mật khẩu">
        </div>
        <div class="form-group">
            <label>Nhập lại mật khẩu</label>
            <input type="password" class="form-control" value="" id="RePassword" name="RePassword" placeholder="Nhập lại mật khẩu">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="Email" class="form-control" name="Email" value="@Model.Email" placeholder="Email">
        </div>
        <div class="form-group">
            <label>Hình Ảnh</label>
            <input type="file" class="form-control" name="Images" placeholder="Nhập hình ảnh">
        </div>
    </div>
    <div class="card-footer">
        <button id="submit-member" class="btn btn-primary">Lưu</button>
    </div>
</form>
<script>
    $(function () {
        $("#submit-member").on("click", function (e) {
            e.preventDefault();
            let password = $("#Password").val();
            let repassword = $("#RePassword").val();
            if (password == repassword)
                $("#FormMember").submit();
        })
    })
</script>

