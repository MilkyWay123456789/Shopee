@model Shopee.Models.Role
@{
    ViewBag.Title = "Item";
    Layout = "~/Areas/Admin/Views/Shared/_ShopeeAdmin.cshtml";
}

<form method="post" id="FormMember" action="@Url.Action("Save","Role")" enctype="multipart/form-data">
    <div class="card-body">
        <input type="hidden" value="@Model.Id" name="Id" />
        <div class="form-group">
            <label>Tên chức năng</label>
            <input type="text" class="form-control" name="Name" value="@Model.Name">
        </div>
        <div class="form-group">
            <label>Mã code</label>
            <input type="text" class="form-control" name="RoleCode" value="@Model.Code">
        </div>
        <div class="form-group">
            <label>Tên nhóm</label>
            <input type="text" class="form-control" name="GroupName" value="@Model.GroupName">
        </div>
    </div>
    <div class="card-footer">
        <button id="submit-member" class="btn btn-primary">Lưu</button>
    </div>
</form>

